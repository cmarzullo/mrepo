### This file is controlled by Chef. All changes will be lost

### The [main] section allows to override mrepo's default settings
[main]
srcdir   = <%= @config.srcdir %>
wwwdir   = <%= @config.wwwdir %>
confdir  = <%= @config.confdir %>
<% if @config.cachedir %>
cachedir = <%= @config.cachedir %>
<% end %>

arch     = <%= @config.arch %>

<% if @config.mailto %>
mailto =  <%= @config.mailto %>
mailfrom =<%= @config.mailfrom %>
smtp-server = <%= @config.smtpserver %>

<% if @config.shareiso %>
shareiso = yes
<% end %>

<% end %>
<% if @config.no_proxy %>
no_proxy = <%= @config.no_proxy %>
<% end %>
<% if @config.ftp_proxy %>
ftp_proxy = <%= @config.ftp_proxy %>
<% end %>
<% if @config.http_proxy %>
http_proxy = <%= @config.http_proxy %>
<% end %>
<% if @config.https_proxy %>
https_proxy = <%= @config.https_proxy %>
<% end %>
<% if @config.createrepo_options %>
createrepo-options = <%= @config.createrepo_options %>
<% end %>
<% if @config.reposync_cleanup %>
reposync-cleanup = <%= @config.reposync_cleanup %>
<% end %>
<% if @config.reposync_newest_only %>
reposync-newest-only = <%= @config.reposync_newest_only %>
<% end %>
<% if @config.reposync_options %>
reposync-options = <%= @config.reposync_options %>
<% end %>
<% if @config.repoview_options %>
repoview-options = <%= @config.repoview_options %>
<% end %>
<% if @config.rhnlogin %>

## RHN
rhnlogin = <%= @config.rhnlogin %>
<% if @config.rhnget_cleanup %>
rhnget_cleanup = <%= @config.rhnget_cleanup %>
<% end %>
<% if @config.rhnget_download_all %>
rhnget_download_all = <%= @config.rhnget_download_all %>
<% end %>
<% if @config.rhnget_options %>
rhnget_options = <%= @config.rhnget_options %>
<% end %>
<% end %>

## The repositories to mirror are defined in /etc/mrepo.conf.d/ 

